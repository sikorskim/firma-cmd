@model firma_mvc.CalcViewModel

<br />
<h2>
    Kalkulator netto-brutto
</h2>

<div class="row">
    <div class="col-4">
<form asp-action="Index">
    <div class="form-group">
        <label class="control-label">Wybierz</label>
        <select id="calcTypeSelect" asp-for="CalcTypeId" class="form-control custom-select" asp-items="ViewBag.CalcType"></select>
    </div>

    <div class="form-group">
        <label class="control-label">Kwota netto</label>
        <input id="calcNettoVal" asp-for="NettoValue" class="form-control" />        
    </div>

    <div class="form-group">
        <label class="control-label">Kwota brutto</label>
        <input id="calcBruttoVal" asp-for="BruttoValue" class="form-control" />        
    </div>

    <div class="form-group">
        <input type="submit" value="Oblicz" class="btn btn-outline-success" />
    </div>
</form>
</div>

<div class="col-4">
        <div class="card border-primary mb-3" style="max-width: 18rem;">
  <div class="card-header">Wynik</div>
  <div class="card-body text-primary">
    <h5 class="card-title">Kwota netto: @ViewBag.NettoVal</h5>
    <h5 class="card-title">Kwota brutto: @ViewBag.BruttoVal</h5>
  </div>
</div>
</div>

</div>

<script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    $(document).ready(function(){
        $('#calcBruttoVal').prop('disabled', true);
    });
</script>