@model IEnumerable<firma_mvc.Contractor>

@{
    ViewData["Title"] = "Index";
}

<p>
    <h2>Kontrahenci</h2>
</p>

    <div class="form-row align-items-center">
        <div class="my-2">
            <button type="button" class="btn btn-outline-success" data-toggle="modal" data-target="#exampleModal">
                Dodaj
            </button>

            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Dodaj nowego kontrahenta</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="container-fluid">
                                @await Html.PartialAsync("CreatePartial", @ViewData["Contractor"])
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-3 my-1">
            <input class="form-control" type="text" name="searchQuery" placeholder="NIP lub nazwa kontrahenta" aria-label="Search">
        </div>
        <div class="my-1">
            <button class="btn btn-outline-primary" type="submit"><i class="fas fa-search"></i> Szukaj</button>
        </div>
    </div>

<table class="table table-bordered table-hover">
    <thead class="thead-light">
        <tr>
            <th>
                #
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NIP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 1;
        }
        @foreach (var item in Model)
        {
            <tr class="table-light" onclick="location.href = '@Url.Action("Details", "Contractors",new { id = item.Id})'">
                <td>
                    @i
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NIP)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
            </tr>
            i++;
        }
    </tbody>
</table>
