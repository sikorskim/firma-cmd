@model firma_mvc.VAT7

<div class="row">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label class="control-label">Rok</label>
            <select asp-for="Year" class="form-control custom-select" asp-items="ViewBag.Year"></select>
        </div>
        <div class="form-group">
            <label class="control-label">Miesiąc</label>
            <select asp-for="Month" class="form-control custom-select" asp-items="ViewBag.Month"></select>
        </div>

        <br />
        <div class="row">
            <div class="form-group col">
                <input type="submit" value="Oblicz" class="btn btn-outline-success" />
            </div>
            <div class="form-group col">
                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Anuluj</button>
            </div>
        </div>
    </form>
    </div>