@model firma_mvc.InvoiceItem
<div class="row">
    <div class="col-md-4">
        <form asp-action="SelectItem" >
            <div class="form-group">
                <input type="hidden" asp-for="InvoiceId" class="form-control" />
            </div>
            @Html.DropDownList("ItemId", (SelectList)ViewBag.ItemId, "Pozycja", new {@class = "custom-select", @id="ItemIdDropDownList" })
        </form>

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="InvoiceId" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" id="invoiceCreateItemName"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VATValue" class="control-label"></label>
                <input asp-for="VATValue" class="form-control" />
                <span asp-validation-for="VATValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnitOfMeasureShortName" class="control-label"></label>
                <input asp-for="UnitOfMeasureShortName" class="form-control"  />
                <span asp-validation-for="UnitOfMeasureShortName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" asp-controller="InvoiceItems" asp-action="CreatePopup" value="Zapisz" class="btn btn-outline-success" />
                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Anuluj</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}