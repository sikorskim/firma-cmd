@model IEnumerable<firma_mvc.Invoice>

@{
    ViewData["Title"] = "Faktury";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-2">
            <p></p>
            <table class="table table-hover">
                <tbody>
                    <tr class="table-light" onclick="location.href = '@Url.Action("Create", "Invoices")'"><td><i class="far fa-file"></i> Nowa</td></tr>
                    <tr class="table-light" onclick="location.href = '@Url.Action("Index", "Invoices")'"><td><i class="far fa-copy"></i> Wystawione</td></tr>
                    <tr class="table-light"><td><i class="far fa-edit"></i> Korekta</td></tr>
                    <tr class="table-light"><td><i class="far fa-file-alt"></i> Robocze</td></tr>
                    <tr class="table-light"><td><i class="fas fa-th-list"></i> Szablony</td></tr>
                </tbody>
            </table>
        </div>
        <div class="col-10">
            <p>
                <h2>Faktury</h2>
            </p>
            <form>
                <div class="form-row align-items-center">
                    <div class="col-sm-2 my-1">
                        <select class="custom-select" id="inlineFormCustomSelectPref">
                            <option selected>Status</option>
                            <option value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                        </select>
                    </div>

                    <div class="col-sm-3 my-1">
                        <input class="form-control" type="search" placeholder="Nr faktury/ NIP/ kontrahent" aria-label="Search">
                    </div>
                    <button class="btn btn-outline-primary" type="submit">Szukaj</button>
                </div>
            </form>

            <table class="table table-responsive table-hover">
                <thead class="thead-light">
                    <tr>
                        <th>
                            L.p.
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Number)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DateOfIssue)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Contractor.NIP)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Contractor)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TotalValue)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.InvoiceStatus.Name)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int i = 1;
                    }
                    @foreach (var item in Model)
                    {
                        <tr class="table-light" onclick="location.href = '@Url.Action("Details", "Invoices",new { id = item.Id})'">
                            <td>
                                @i
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Number)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateOfIssue)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Contractor.NIP)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Contractor.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TotalValue)
                            </td>
                            <td>
                                <span class="badge badge-primary">@Html.DisplayFor(modelItem => item.InvoiceStatus.Name)</span>
                            </td>
                        </tr>
                        i++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>