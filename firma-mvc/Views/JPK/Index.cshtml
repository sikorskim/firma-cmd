@model firma_mvc.JPKViewModel

<p>
    <h2>Generator JPK</h2>
</p>

@{
    if (!string.IsNullOrEmpty(ViewBag.Info))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @ViewBag.Info
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
    }
}

<hr />
<div class="row">
    <div class="col-md-2">
        <form asp-action="Index">
            <div class="form-group">
                <label class="control-label">Typ JPK</label>
                <select asp-for="JPKTypeId" class="form-control custom-select" asp-items="ViewBag.JPKType"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Rok</label>
                <select asp-for="Year" class="form-control custom-select" asp-items="ViewBag.Year"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Miesiąc</label>
                <select asp-for="Month" class="form-control custom-select" asp-items="ViewBag.Month"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Generuj" class="btn btn-outline-success" />
            </div>
        </form>
        @*@Html.ActionLink("Generuj", "Generate", new { month = Model.Month, year = Model.Year, jpkTypeCode = Model.JPKTypeId }, htmlAttributes: new { @class = "btn btn-outline-dark" })*@
    </div>
</div>