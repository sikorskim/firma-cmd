@model IEnumerable<firma_mvc.InvoiceCorrection>

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid">
    <div class="row">
        @await Html.PartialAsync("~/Views/Invoices/SideMenuPartial.cshtml")
        <div class="col-10">

            <p>
                <h2>Korekty faktur</h2>
            </p>

            <p>
                <a asp-action="Create" class="btn btn-outline-success">Dodaj</a>
            </p>
            <table class="table table-hover table-bordered">
                <thead class="thead-light">
                    <tr>
                        <th>
                            L.p.
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DateOfCorrection)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DateOfIssue)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Number)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Contractor)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CorrectionCause)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr class="table-light" onclick="location.href = '@Url.Action("Details", new { id = item.Id})'">
                        <td>
                            @Html.DisplayFor(modelItem => item.InvoiceId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateOfCorrection)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateOfIssue)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Number)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CorrectionCause)
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
