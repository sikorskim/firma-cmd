@model firma_mvc.Item

<div class="row col">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="form-group col-8">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-4">
                <label asp-for="UnitOfMeasureId" class="control-label"></label>
                <select asp-for="UnitOfMeasureId" class="form-control custom-select" asp-items="ViewBag.UnitOfMeasureId"></select>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-4">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group col-3">
                <label asp-for="VATId" class="control-label"></label>
                <select asp-for="VATId" class="form-control custom-select" asp-items="ViewBag.VATId"></select>
            </div>
            @*<div class="form-group col-4">
                <label class="control-label">Wartość brutto</label>
                <input id="brutto" class="form-control" disabled/>
            </div>*@
        </div>
        <div class="row col">
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-outline-success" />
            </div>
            <div class="form-group col">
                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Anuluj</button>
            </div>
        </div>
    </form>
</div>