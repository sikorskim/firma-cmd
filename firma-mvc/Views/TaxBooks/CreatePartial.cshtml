@model firma_mvc.TaxBook

<div class="row">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="form-group col-4">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group col">
                <label asp-for="InvoiceNumber" class="control-label"></label>
                <input asp-for="InvoiceNumber" class="form-control" />
                <span asp-validation-for="InvoiceNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-4">
                <label asp-for="ContractorId" class="control-label"></label>
                <select asp-for="ContractorId" class="form-control custom-select" asp-items="ViewBag.ContractorId"></select>
            </div>
            <div class="form-group col">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="row align-items-end">
            <div class="col-md-3">
                <label asp-for="SellValue" class="control-label"></label>
                <input asp-for="SellValue" class="form-control" />
                <span asp-validation-for="SellValue" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label asp-for="OtherIncome" class="control-label"></label>
                <input asp-for="OtherIncome" class="form-control" />
                <span asp-validation-for="OtherIncome" class="text-danger"></span>
            </div>
        </div>
        <div class="row align-items-end">
            <div class="form-group col-md-3">
                <label asp-for="GoodsBuys" class="control-label"></label>
                <input asp-for="GoodsBuys" class="form-control" />
                <span asp-validation-for="GoodsBuys" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="BuysSideEffects" class="control-label"></label>
                <input asp-for="BuysSideEffects" class="form-control" />
                <span asp-validation-for="BuysSideEffects" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="Salary" class="control-label"></label>
                <input asp-for="Salary" class="form-control" />
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="OtherCosts" class="control-label"></label>
                <input asp-for="OtherCosts" class="form-control" />
                <span asp-validation-for="OtherCosts" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-3">
                <label class="control-label">kolumna 15</label>
                <input asp-for="Column15" class="form-control" />
                <span asp-validation-for="Column15" class="text-danger"></span>
            </div>
            <div class="form-group col">
                <label asp-for="CostDescription" class="control-label"></label>
                <input asp-for="CostDescription" class="form-control" />
                <span asp-validation-for="CostDescription" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-3">
                <label asp-for="ResearchCostValue" class="control-label"></label>
                <input asp-for="ResearchCostValue" class="form-control" />
                <span asp-validation-for="ResearchCostValue" class="text-danger"></span>
            </div>
            <div class="form-group col">
                <label asp-for="Comments" class="control-label"></label>
                <input asp-for="Comments" class="form-control" />
                <span asp-validation-for="Comments" class="text-danger"></span>
            </div>
        </div>
        <div class="row col">
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-outline-success" />
            </div>
            <div class="form-group col">
                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Anuluj</button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
