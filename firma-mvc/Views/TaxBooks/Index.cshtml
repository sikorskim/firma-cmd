@model IEnumerable<firma_mvc.TaxBook>

@{
    ViewData["Title"] = "Księga przychodów i rozchodów";
}

<p>
    <h2>Księga przychodów i rozchodów</h2>
</p>

<p>
    @Html.ActionLink("Dodaj", "Create", null, htmlAttributes: new { @class = "btn btn-outline-success" })
</p>
<table class="table table-responsive table-hover">
    <thead class="thead-light">
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Number)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.InvoiceNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NIP)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SellValue)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OtherIncome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GoodsBuys)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BuysSideEffects)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Salary)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OtherCosts)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Column15)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CostDescription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ResearchCostValue)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Comments)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InvoiceNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NIP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SellValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OtherIncome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GoodsBuys)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BuysSideEffects)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OtherCosts)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Column15)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CostDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ResearchCostValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comments)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
