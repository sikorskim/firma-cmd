@model IEnumerable<firma_mvc.VAT>

<p>
    <a asp-action="Create" class="btn btn-outline-success">Dodaj</a>
</p>
<table class="table table-hover">
    <thead class="thead-light">
        <tr>
            <th>
                L.p.
            </th>
                <th>
                    @Html.DisplayNameFor(model => model.Value)
                </th>            
        </tr>
    </thead>
    <tbody>
        @{
            int i = 1;
        }

@foreach (var item in Model) {
        <tr class="table-light" data-toggle="modal" data-target="#vatRateEdit">
            <td>
                @i
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>            
        </tr>
        i++;
}
    </tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="vatRateEdit" tabindex="-1" role="dialog" aria-labelledby="vatRateLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="vatRateLabel">Edycja formy płatności</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    @await Html.PartialAsync("../PaymentMethods/EditPartial.cshtml", new PaymentMethod())
                </div>
            </div>
        </div>
    </div>
</div>